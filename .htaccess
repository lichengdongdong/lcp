Options +FollowSymlinks
RewriteEngine on

# 重写规则
RewriteRule ^api/([a-z0-9]+)$   api/index.php?entity=$1&action=index [nc,qsa]
RewriteRule ^api/([a-z0-9]+)/([a-z0-9]+)$   api/index.php?entity=$1&action=$2 [nc,qsa]
RewriteRule ^api/([a-z0-9]+)/([a-z0-9]+)/([a-z0-9]+)$   api/index.php?entity=$1&action=$2&id=$3 [nc,qsa] 